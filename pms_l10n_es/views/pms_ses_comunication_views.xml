<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record model="ir.ui.view" id="pms_ses_comunication_view_form">
        <field name="name">pms.ses.comunication.form</field>
        <field name="model">pms.ses.comunication</field>
        <field name="arch" type="xml">
            <form string="Log institution traveller report detail">
                <sheet>
                    <group>
                        <field name="reservation_id" />
                        <field name="comunication_id" />
                        <field name="operation" />
                        <field name="entity" />
                        <field name="notification_time" />
                        <field name="processing_time" />
                        <field name="state" />
                        <field name="processing_result" />
                        <field name="soap_content" widget="CopyClipboardChar" />
                        <field name="xml_content" widget="CopyClipboardChar" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record model="ir.ui.view" id="pms_ses_comunication_view_tree">
        <field name="name">pms.ses.comunication.tree</field>
        <field name="model">pms.ses.comunication</field>
        <field name="arch" type="xml">
            <tree name="Property Ubications" create="false">
                <field name="reservation_id" />
                <field name="comunication_id" />
                <field name="operation" />
                <field name="entity" />
                <field name="notification_time" />
                <field name="processing_time" />
                <field name="state" />
                <field name="processing_result" />
            </tree>
        </field>
    </record>

    <record model="ir.ui.view" id="pms_ses_comunication_view_search">
        <field name="name">pms.ses.comunication.search</field>
        <field name="model">pms.ses.comunication</field>
        <field name="arch" type="xml">
            <search string="Log institution traveller report">
                <field name="reservation_id" />
                <field name="notification_time" />
                <field name="processing_time" />
                <field name="state" />
            </search>
        </field>
    </record>

    <record model="ir.actions.act_window" id="open_pms_ses_comunication_form_tree">
        <field name="name">SES Comunications</field>
        <field name="res_model">pms.ses.comunication</field>
        <field name="view_mode">tree,form</field>
    </record>
    <menuitem
        name="SES Comunications"
        id="menu_open_pms_ses_comunication_form_tree"
        action="open_pms_ses_comunication_form_tree"
        parent="pms.menu_reservations"
        sequence="29"
    />
</odoo>
