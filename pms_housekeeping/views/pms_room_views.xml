<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <record id="pms_room_view_form" model="ir.ui.view">
        <field name="name">pms.room.view.form</field>
        <field name="model">pms.room</field>
        <field name="inherit_id" ref="pms.pms_room_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//page[@name='information_pms_room']" position="inside">
                <group colspan="4" col="4">
                    <field name="clean_status" string="Clean Status" />
                    <!-- <field name="clean_type" string="Clean Type" attrs="{'readonly': True}" /> -->
                </group>
            </xpath>
        </field>
    </record>

    <record id="pms_room_rack_view_form" model="ir.ui.view">
        <field name="name">pms.room.rack.view.form</field>
        <field name="model">pms.room</field>
        <field name="type">form</field>
        <field name="priority" eval="40" />
        <field name="active" eval="True" />
        <field name="arch" type="xml">
            <form string="Property Room">
                <group col="4" colspan="4" name="header">
                    <field
                        name="name"
                        readonly="1"
                        nolabel="1"
                        style="font-size: 2em;"
                    />
                    <group col="1">
                        <field name="clean_employee_id" />
                    </group>
                    <group col="1">
                        <field
                            name="employee_picture"
                            widget="image"
                            class="oe_left oe_avatar"
                            nolabel="1"
                            readonly="1"
                        />
                    </group>
                </group>
                <group col="4" colspan="4" name="status" string="Clean type and status">
                    <field
                        name="clean_status"
                        readonly="1"
                        nolabel="1"
                        style="font-size: 2em;"
                    />
                    <!-- <group col="1">
                        <field name="clean_status" />
                    </group> -->
                </group>

                <separator string="Task Lines" colspan="4" />

                <field
                    name="housekeeping_task_ids"
                    readonly="0"
                    context="{'default_state': 'to_do',
                              'default_employee_id': clean_employee_id,
                              'tree_view_ref':'view_pms_room_rack_tree',
                              'form_view_ref':'view_pms_room_rack_form',
                              'default_room_id': id}"
                />

            </form>
        </field>
    </record>

    <record id="pms_room_rack_view_tree" model="ir.ui.view">
        <field name="name">pms.room.rack.view.tree</field>
        <field name="model">pms.room</field>
        <field name="type">tree</field>
        <field name="priority" eval="20" />
        <field name="active" eval="True" />
        <field name="arch" type="xml">
            <tree string="Property Room">
                <field name="sequence" widget="handle" />
                <field name="next_arrival_datetime" widget="remaining_days" />
                <field name="name" />
                <field name="capacity" />
                <field name="occupation_status" />
                <field name="next_departure_reservation_id" string="In House" />
                <field name="next_departure_datetime" widget="remaining_days" />
                <field name="next_arrival_reservation_id" string="Next arrival" />
            </tree>
        </field>
    </record>

    <record id="room_rack_view_search" model="ir.ui.view">
        <field name="name">room.rack.view.search</field>
        <field name="model">pms.room</field>
        <field name="arch" type="xml">
            <search string="Housekeeping filters">
                <field name="clean_employee_id" />
                <field name="ubication_id" />
                <field name="room_type_id" />
                <!-- <filter name="filter_occupied" string="Occupied" domain="[('clean_status','=','occupied')]"/> -->

                <searchpanel>
                    <field
                        name="room_type_id"
                        string="Room type"
                        enable_counters="1"
                        select="multi"
                        icon="fa-bed"
                    />
                    <field
                        name="clean_employee_id"
                        string="Employee"
                        enable_counters="1"
                        select="multi"
                        icon="fa-user"
                    />
                    <field
                        name="ubication_id"
                        string="Ubication"
                        enable_counters="1"
                        select="multi"
                        icon="fa-hospital-o"
                    />
                    <!-- <field name="clean_status" string="Clean Type" enable_counters="1" select="multi"/> -->
                </searchpanel>
            </search>
        </field>
    </record>

    <record id="pms_room_rack_view_kanban" model="ir.ui.view">
        <field name="name">pms.room.rack.view.kanban</field>
        <field name="model">pms.room</field>
        <field name="type">kanban</field>
        <field name="priority" eval="16" />
        <field name="active" eval="True" />
        <field name="arch" type="xml">
            <kanban
                sample="1"
                default_group_by="ubication_id"
                group_create="false"
                create="false"
                class="oe_background_grey o_kanban_dashboard o_room_rack_kanban"
            >
                <field name="name" />
                <field name="room_type_id" />
                <field name="next_arrival_datetime" />
                <field name="next_departure_datetime" />
                <field name="next_departure_reservation_id" />
                <field name="pms_property_id" />
                <field name="occupation_status" />
                <field name="color" />

                <templates>
                    <t t-name="kanban-box">
                        <div
                            t-attf-class="#{!selection_mode ? kanban_color(record.color.raw_value) : ''}"
                        >
                            <div
                                t-attf-class="d-flex flex-column p-0 oe_kanban_card oe_kanban_global_click"
                            >
                                <field name="occupation_status" invisible="1" />
                                <div class="ribbon ribbon_free ribbon-top-right">
                                    <span>Arrival <field
                                            name="next_arrival_datetime"
                                            widget="remaining_days"
                                        /></span>
                                </div>
                                <!-- <div class="ribbon ribbon-top-right" attrs="{'invisible': [('occupation_status', '!=', 'occupied')]}">
                                    <span>Departure <field name="next_departure_datetime" widget="remaining_days"/></span>
                                </div>
                                <div class="ribbon ribbon_out_service ribbon-top-right" attrs="{'invisible': [('occupation_status', '!=', 'out_service')]}">
                                    <span>Out of Service </span>
                                </div> -->
                            </div>
                            <div class="o_kanban_card_header">
                                <div class="o_kanban_card_header_title">
                                    <div class="o_primary col-12">
                                        <span><t t-esc="record.name.value" /></span>
                                    </div>
                                    <!-- <div class="o_kanban_record_subtitle col-12 text-muted">
                                        <field name="user_id"/>
                                    </div>
                                    <field name="is_favorite" widget="boolean_favorite" nolabel="1"/>
                                    <div t-if="record.alias_name.value and record.alias_domain.value and record.state.raw_value == 'recruit'" class="o_secondary o_job_alias">
                                        <small> <i class="fa fa-envelope-o" role="img" aria-label="Alias" title="Alias"/> <field name="alias_id"/> </small>
                                    </div> -->
                                </div>
                                <!-- <div class="o_kanban_manage_button_section">
                                    <a class="o_kanban_manage_toggle_button" href="#"><i class="fa fa-ellipsis-v" role="img" aria-label="Manage" title="Manage"/></a>
                                </div> -->
                            </div>

                            <div class="container o_kanban_card_content">
                                <!-- <t t-if="record.state.raw_value == 'open'">
                                    <div class="row">
                                        <div class="col-12 o_kanban_primary_left">
                                            <button class="btn btn-secondary" name="set_recruit" type="object">Start Recruitment</button>
                                        </div>
                                    </div>
                                </t> -->
                                <div class="o_primary">
                                    <span><t t-esc="record.name.value" /></span>
                                    <t
                                        t-if="record.next_departure_reservation_id.value"
                                    >
                                        <span><t
                                                t-esc="record.next_departure_reservation_id.value"
                                            /></span>
                                    </t>
                                </div>
                                <div
                                    name="kanban_boxes"
                                    class="row o_room_rack_kanban_boxes"
                                >
                                    <!-- <div class="o_room_rack_kanban_box o_kanban_primary_bottom bottom_block" style="padding-left:2px;">
                                        <div class="o_link_trackers col-12">
                                            Next Arrival:
                                            <field name="next_arrival_datetime" widget="remaining_days"/> <br/>
                                        </div>
                                    </div> -->
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record model="ir.actions.act_window" id="action_pms_room_rack_kanban">
        <field name="name">Housekeeping</field>
        <field name="res_model">pms.room</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="search_view_id" ref="room_rack_view_search" />
        <field
            name="view_ids"
            eval="[
                (5, 0, 0),
                (0, 0, {'view_mode': 'kanban', 'view_id': ref('pms_room_rack_view_kanban')}),
                (0, 0, {'view_mode': 'tree', 'view_id': ref('pms_room_rack_view_tree')}),
                (0, 0, {'view_mode': 'form', 'view_id': ref('pms_room_rack_view_form')}),
            ]"
        />
    </record>

    <menuitem
        name="Room Rack"
        id="menu_action_pms_house_keeping_view_rack"
        action="pms_housekeeping.action_pms_room_rack_kanban"
        sequence="10"
        parent="pms_housekeeping.menu_action_pms_house_keeping"
    />

</odoo>
