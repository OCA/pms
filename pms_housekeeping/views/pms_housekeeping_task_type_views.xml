<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <record id="pms_housekeeping_task_type_view_tree" model="ir.ui.view">
        <field name="name">pms.housekeeping.task.type.view.tree</field>
        <field name="model">pms.housekeeping.task.type</field>
        <field name="type">tree</field>
        <field name="priority" eval="16" />
        <field name="arch" type="xml">
            <tree string="Housekeeping Task Types">
                <field name="name" colspan="1" />
                <field name="clean_type" colspan="1" />
            </tree>
        </field>
    </record>

    <record
        model="ir.actions.act_window"
        id="action_pms_house_keeping_task_type_view_form"
    >
        <field name="name">Housekeeping Task Types</field>
        <field name="res_model">pms.housekeeping.task.type</field>
        <field name="view_mode">tree,form</field>
    </record>


    <menuitem
        name="House Keeping Task Types"
        id="menu_action_pms_house_keeping_task_type_view_form"
        action="action_pms_house_keeping_task_type_view_form"
        sequence="90"
        parent="pms.pms_configuration_menu"
    />
</odoo>
