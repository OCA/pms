<odoo>
    <record id="pms_folio_view_form" model="ir.ui.view">
        <field name="name">pms.folio.wubook.connector.form</field>
        <field name="model">pms.folio</field>
        <field name="inherit_id" ref="connector_pms.pms_folio_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//notebook/page[@name='connector']">
                <group string="Wubook">
                    <field name="channel_wubook_bind_ids" nolabel="1">
                        <tree editable="bottom">
                            <field
                                name="backend_id"
                                attrs="{'readonly': [('id', '!=', False)]}"
                            />
                            <field name="external_id" />
                            <button
                                type="object"
                                title="Resynchronize (import)"
                                name="resync_import"
                                class="fa fa-download"
                            />
                            <field name="sync_date" />
                            <button
                                type="object"
                                title="Resynchronize (export)"
                                name="resync_export"
                                class="fa fa-upload"
                            />
                            <field name="sync_date_export" />
                        </tree>
                    </field>
                </group>
            </xpath>
        </field>
    </record>
</odoo>
