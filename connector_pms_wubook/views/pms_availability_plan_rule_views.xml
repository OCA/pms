<odoo>
     <record id="availability_plan_rule_view_form" model="ir.ui.view">
        <field name="name">pms.availability.plan.rule.wubook.connector.form</field>
        <field name="model">pms.availability.plan.rule</field>
        <field name="inherit_id" ref="pms.availability_plan_rule_view_form" />
        <field name="arch" type="xml">
           <xpath expr="//field[@name='room_type_id']/..">
                <field name="inconsistent_rule_count" invisible="1" />
            </xpath>
            <xpath expr="//field[@name='room_type_id']/.." position="before">
                <div
                    class="alert alert-warning"
                    role="alert"
                    style="margin-bottom:0px;"
                    attrs="{'invisible': [('inconsistent_rule_count', '=', 0)]}"
                ><p>
                    It exists <strong><field
                                name="inconsistent_rule_count"
                            /></strong> other Availability Plan Rule(s) with different <strong
                        >Quota</strong>, <strong
                        >Max. Availability</strong> and/or <strong
                        >No OTA</strong> for the same Wubook backend.
                    If you continue all of them <strong
                        >will be replaced</strong> by the values set here
                </p>
                </div>
            </xpath>
        </field>
    </record>

    <record id="availability_plan_rule_wubook_connector_view_form" model="ir.ui.view">
        <field
            name="name"
        >pms.availability.plan.rule.wubook.connector.binds.form</field>
        <field name="model">pms.availability.plan.rule</field>
        <field name="inherit_id" ref="connector_pms.availability_plan_rule_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//notebook/page[@name='connector']">
                <group string="Wubook">
                    <field name="channel_wubook_bind_ids" nolabel="1">
                        <tree editable="bottom">
                            <field
                                name="backend_id"
                                attrs="{'readonly': [('id', '!=', False)]}"
                            />
                            <field name="external_id" />
                            <field name="no_ota" />
                            <field name="sync_date" />
                            <field name="synced_export" />
                            <field name="sync_date_export" />
                        </tree>
                    </field>
                </group>
            </xpath>
        </field>
    </record>
</odoo>
