<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="pms_property_opening_form" model="ir.ui.view">
        <field name="name">pms.property.opening.form</field>
        <field name="model">pms.property</field>
        <field name="inherit_id" ref="pms.pms_property_views_form" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='email']" position="after">
                <sheet>
                    <group>
                        <div class="row">
                            <div class="col-12">
                                <div class="o_horizontal_separator">
                                    Property Opening
                                </div>
                            </div>
                            <div class="col-12">
                                <group name="tourism_rooms">
                                    <field name="open_date" />
                                </group>
                            </div>
                        </div>
                    </group>
                </sheet>
            </xpath>
        </field>
    </record>
</odoo>
