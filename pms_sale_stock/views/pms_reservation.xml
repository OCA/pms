<odoo>
    <record id="view_pms_property_form_inherit" model="ir.ui.view">
        <field name="name">pms.property.view.form.inherit</field>
        <field name="model">pms.property</field>
        <field name="inherit_id" ref="pms_stock.view_pms_property_form_stock" />
        <field name="arch" type="xml">
            <field name="stock_location_id" position="attributes">
                <attribute name="domain">[('template_id','!=',None)]</attribute>
            </field>
        </field>
    </record>
    <record id="view_pms_reservation_form_inherit" model="ir.ui.view">
        <field name="name">pms.reservation.view.form.inherit</field>
        <field name="model">pms.reservation</field>
        <field name="inherit_id" ref="pms_sale.view_reservation_form" />
        <field name="arch" type="xml">
            <div name="button_box" position="inside">

                <button
                    name="action_view_pms_checkouts"
                    type="object"
                    class="oe_stat_button"
                    icon="fa-check"
                    attrs="{'invisible': [('stock_check_count', '=', 0)]}"
                >
                    <field
                        name="stock_check_count"
                        widget="statinfo"
                        string="Checkouts"
                    />
                </button>
            </div>
        </field>
    </record>
    <record id="action_stock_content_location_check_pms" model="ir.actions.act_window">
        <field name="name">Content Checks</field>
        <field name="res_model">stock.location.content.check</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('pms_reservation_id','!=',None)]</field>
    </record>

    <menuitem
        id="menu_stock_location_content_check_pms"
        name="Checkouts"
        parent="pms_base.menu_operations"
        action="action_stock_content_location_check_pms"
        sequence="25"
        groups="stock.group_stock_multi_locations"
    />

</odoo>
