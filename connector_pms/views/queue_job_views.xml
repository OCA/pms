<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <record id="view_queue_job_form" model="ir.ui.view">
        <field name="name">pms.queue.job.form</field>
        <field name="model">queue.job</field>
        <field name="inherit_id" ref="queue_job.view_queue_job_form" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='channel']" position="after">
                <field name="pms_property_id" />
            </xpath>
        </field>
    </record>

    <record id="view_queue_job_tree" model="ir.ui.view">
        <field name="name">pms.queue.job.tree</field>
        <field name="model">queue.job</field>
        <field name="inherit_id" ref="queue_job.view_queue_job_tree" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='channel']" position="after">
                <field name="pms_property_id" />
            </xpath>
        </field>
    </record>

    <record id="view_queue_job_search" model="ir.ui.view">
        <field name="name">pms.queue.job.search</field>
        <field name="model">queue.job</field>
        <field name="inherit_id" ref="queue_job.view_queue_job_search" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='result']" position="after">
                <filter name="pms_property_id" />
            </xpath>
            <xpath expr="//filter[@name='group_by_channel']" position="after">
                <filter
                    name="group_by_property"
                    string="Property"
                    domain="[]"
                    context="{'group_by':'pms_property_id'}"
                />
            </xpath>
        </field>
    </record>

</odoo>
