<odoo>
    <record id="pms_property_views_form" model="ir.ui.view">
        <field name="name">pms.property.connector.form</field>
        <field name="model">pms.property</field>
        <field name="inherit_id" ref="pms.pms_property_views_form" />
        <field
            name="groups_id"
            eval="[(4, ref('connector.group_connector_manager'))]"
        />
        <field name="arch" type="xml">
            <xpath expr="//notebook">
                <!-- change the invisible attribute to 0 when used
                     in submodules -->
                <page string="Connectors" name="connector" />
            </xpath>
        </field>
    </record>
</odoo>
