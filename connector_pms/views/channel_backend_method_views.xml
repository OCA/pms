<odoo>
    <record id="channel_backend_method_view_form" model="ir.ui.view">
        <field name="name">channel.backend.method.form</field>
        <field name="model">channel.backend.method</field>
        <field name="arch" type="xml">
            <form string="PMS Channel Backend Method">
                <header />
                <sheet>
                    <group>
                        <field name="name" />
                        <field name="backend_type_id" />
                    </group>
                    <group>
                        <field name="max_calls" />
                        <field name="time_window" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="channel_backend_method_view_tree" model="ir.ui.view">
        <field name="name">channel.backend.method.tree</field>
        <field name="model">channel.backend.method</field>
        <field name="arch" type="xml">
            <tree string="PMS Channel Backend Method">
                <field name="backend_type_id" />
                <field name="name" />
                <field name="max_calls" />
                <field name="time_window" />
            </tree>
        </field>
    </record>

    <record id="channel_backend_method_action" model="ir.actions.act_window">
        <field name="name">PMS Backend Method</field>
        <field name="res_model">channel.backend.method</field>
    </record>

    <menuitem
        id="channel_backend_method_menu"
        name="Backend Methods"
        sequence="30"
        parent="channel_menu"
        action="channel_backend_method_action"
    />
</odoo>
