<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <template id="pms_website_header_01" name="Header Template 01">
        <section
            class="s_carousel_wrapper"
            data-vxml="001"
            data-snippet="s_carousel"
            data-name="Carousel"
            style=""
        >
            <div
                id="myCarousel1649803591556"
                class="s_carousel s_carousel_default carousel slide pointer-event"
                data-interval="10000"
                style="position: relative;"
            >
                <ol class="carousel-indicators o_we_no_overlay">
                    <t t-set="i" t-value="0" />
                    <t t-foreach="slider_01['pictures']" t-as="slider_picture">
                        <li
                            data-target="#myCarousel1649803591556"
                            t-att-data-slide-to="'{}'.format(i)"
                        />
                        <t t-set="i" t-value="i+1" />
                    </t>
                </ol>
                <div class="carousel-inner">
                    <t t-foreach="slider_01['pictures'][0:1]" t-as="slider">
                        <div
                            class="carousel-item pt96 pb96 active"
                            t-att-style="'background-image: url({}); background-size: cover; background-position: center;'.format(slider)"
                            data-name="Slide"
                        >
                            <div class="container" style="min-height: 350px;" />
                        </div>
                    </t>
                    <t t-foreach="slider_01['pictures'][1:]" t-as="slider">
                        <div
                            class="carousel-item pt96 pb96"
                            t-att-style="'background-image: url({}); background-size: cover; background-position: center;'.format(slider)"
                            data-name="Slide"
                        >
                            <div class="container" style="min-height: 350px;" />
                        </div>
                    </t>
                </div>
                <a
                    class="carousel-control-prev o_not_editable o_we_no_overlay"
                    href="#myCarousel1649803591556"
                    data-slide="prev"
                    role="img"
                    aria-label="Anterior"
                    title="Anterior"
                >
                    <span class="carousel-control-prev-icon" />
                    <span class="sr-only o_default_snippet_text">Anterior
                    </span>
                </a>
                <a
                    class="carousel-control-next o_not_editable o_we_no_overlay"
                    href="#myCarousel1649803591556"
                    data-slide="next"
                    role="img"
                    aria-label="Siguiente"
                    title="Siguiente"
                >
                    <span class="carousel-control-next-icon" />
                    <span class="sr-only o_default_snippet_text">Siguiente
                    </span>
                </a>
            </div>
        </section>
    </template>
</odoo>
