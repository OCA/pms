<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <template id="pms_website_dynamic_amenities_template" name="Dynamic Amenities">
        <section
            class="s_text_block pt32 pb32 o_colored_level"
            data-snippet="s_text_block"
            data-name="Text"
        >
            <div class="s_allow_columns container">
                <h2>
                    Todas las amenidades
                </h2>
                <p>
                    Explora todas las amenidades disponibles en esta propiedad
                </p>
                <div class="container-fluid">
                    <ul class="list-group direction-horizontal row">
                        <t t-foreach="property.amenity_ids" t-as="amenity_obj">
                            <li
                                class="list-group-item d-flex col col-sm-6 col-md-6"
                                style="background-color: transparent; border-width: 0px; padding-right: 15px; padding-left: 15px;"
                            >
                                <div
                                    class="bullet pt-1 pr-3"
                                    style="padding-top: 0px !important;"
                                >
                                    <span
                                        class="icon-container"
                                        style="color: rgba(0,0,0,0.2);"
                                    >
                                        ●
                                    </span>
                                </div>
                                <div class="flex-grow-1">
                                    <p class="mb-1">
                                        <span t-esc="amenity_obj.name" />
                                    </p>
                                </div>
                            </li>
                        </t>
                    </ul>
                </div>
                <div class="row">
                    <div class="col-12">
                        <a
                            class="btn btn-primary"
                            href="#"
                            data-toggle="modal"
                            data-target="#modal_more_amenities"
                        >
                            Ver mas amenidades.
                        </a>
                        <div
                            class="modal fade"
                            id="modal_more_amenities"
                            tabindex="-1"
                            role="dialog"
                            aria-labelledby="modal_more_amenities_label"
                            aria-hidden="true"
                        >
                            <div class="modal-dialog" role="document">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h5
                                            class="modal-title"
                                            id="modal_more_amenities_label"
                                        >
                                            <span>
                                                Todas las amenidades
                                            </span>
                                        </h5>
                                        <button
                                            type="button"
                                            class="close"
                                            data-dismiss="modal"
                                            aria-label="Close"
                                        >
                                            <span
                                                aria-hidden="false"
                                            ><![CDATA[&times;]]></span>
                                        </button>
                                    </div>
                                    <div class="modal-body">
                                        <ul class="list-group direction-horizontal row">
                                            <t
                                                t-foreach="property.amenity_ids"
                                                t-as="amenity_obj"
                                            >
                                                <li
                                                    class="list-group-item d-flex col col-sm-6 col-md-6"
                                                    style="background-color: transparent; border-width: 0px; padding-right: 15px; padding-left: 15px;"
                                                >
                                                    <div
                                                        class="bullet pt-1 pr-3"
                                                        style="padding-top: 0px !important;"
                                                    >
                                                        <span
                                                            class="icon-container"
                                                            style="color: rgba(0,0,0,0.2);"
                                                        >
                                                            ●
                                                        </span>
                                                    </div>
                                                    <div class="flex-grow-1">
                                                        <p class="mb-1">
                                                            <span
                                                                t-esc="amenity_obj.name"
                                                            />
                                                        </p>
                                                    </div>
                                                </li>
                                            </t>
                                        </ul>
                                    </div>
                                    <div class="modal-footer">
                                        <button
                                            type="button"
                                            class="btn btn-secondary"
                                            data-dismiss="modal"
                                        >Close
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </template>
</odoo>
