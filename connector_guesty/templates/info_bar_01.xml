<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <template id="website_info_bar_01_template" name="Info Bar 01">
        <section>
            <div class="container">
                <div class="row">
                    <div class="col-md-12 pt-3 pb-3 " id="product_details">
                        <h1>
                            <span t-field="property.name" />
                            <small class="text-muted">
                                <span t-field="property.ref" />
                            </small>
                        </h1>
                        <span
                            itemprop="url"
                            style="display:none;"
                            t-esc="property.website_url"
                        />
                        <h4 class="mt-3" t-if="property.partner_id">
                            <a
                                itemprop="name"
                                t-att-href="property.google_map_link()"
                                target="_BLANK"
                            >
                                <span t-field="property.city" />
                                <span>,</span>
                                <span t-field="property.state_id" />
                            </a>
                        </h4>
                    </div>
                </div>
                <div class="row">
                    <div class="col-3">
                        <t
                            t-set="icon"
                            t-value="env.ref('pms_base.pms_room_type_half_bath').sudo().icon"
                        />
                        <span t-attf-class="{{icon}}" style="font-size: 18px" />
                        <span
                            style="font-size: 20px; line-height: 40px;"
                            t-esc="property.qty_half_bathroom"
                            class="ml-1 mr-1"
                        />
                        <span>Bathroom(s)</span>
                    </div>
                    <div class="col-3">
                        <t
                            t-set="icon"
                            t-value="env.ref('pms_base.pms_room_type_living').sudo().icon"
                        />
                        <span t-attf-class="{{icon}}" />
                        <span
                            style="font-size: 20px; line-height: 40px;"
                            t-esc="property.qty_living_room"
                        />
                        <span>Bedroom(s)</span>
                    </div>
                    <div class="col-3">
                        <span class="fa fa-users" />
                        <span
                            style="font-size: 20px; line-height: 40px;"
                            t-esc="property.no_of_guests"
                        />
                        <span>Guest(s)</span>
                    </div>
                    <div class="col-3">
                        <span class="fa fa-home" />
                        <span
                            style="font-size: 20px; line-height: 40px;"
                            t-esc="property.area"
                        />
                        <span>SQM</span>
                    </div>
                </div>
            </div>
        </section>
    </template>
</odoo>
