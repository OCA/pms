<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <record id="product_discount_form_view" model="ir.ui.view">
        <field name="name">product.discount.form</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view" />
        <field name="arch" type="xml">
            <xpath expr="//page[@name='sales']/group" position="after">
                <group string="Discount" name="discount">
                    <field name="allow_discount" />
                </group>
            </xpath>
        </field>
    </record>
</odoo>
